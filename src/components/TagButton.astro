---
interface Props {
    tag: string;
}
const { tag } = Astro.props;
---

<a
    href={`/tags/${tag}`}
    class="bg-blue-100 hover:bg-blue-200 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400 inline-flex items-center justify-center hover:border-blue-500 dark:hover:bg-gray-800 dark:hover:border-blue-500 dark:hover:text-blue-500 transition-colors duration-200 ease-in-out"
>
    <span class="text-sm">#</span>
    {tag}
</a>
